<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/basicInfo"
        layout="@layout/nav_user" />
    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_preferences"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/basic_margin"
        android:layout_marginHorizontal="@dimen/basic_margin"
        app:layout_constraintTop_toBottomOf="@+id/basicInfo"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/infoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoText"/>
    <TextView
        android:id="@+id/infoHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoName"/>
    <TextView
        android:id="@+id/infoWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textSize="25sp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoHeight"/>
    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:enabled="false"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/basic_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infoName"
        app:layout_constraintTop_toTopOf="@+id/infoName"
        app:layout_constraintBottom_toBottomOf="@+id/infoName" />
    <EditText
        android:id="@+id/editHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:enabled="false"
        android:layout_marginEnd="@dimen/basic_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editName"
        app:layout_constraintTop_toTopOf="@+id/infoHeight"
        app:layout_constraintBottom_toBottomOf="@+id/infoHeight" />
    <EditText
        android:id="@+id/editWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:enabled="false"
        android:layout_marginEnd="@dimen/basic_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editName"
        app:layout_constraintTop_toTopOf="@+id/infoWeight"
        app:layout_constraintBottom_toBottomOf="@+id/infoWeight" />
    <TextView
        android:id="@+id/infoDietary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dietary_restrictions"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoWeight"/>
    <Spinner
        android:id="@+id/spinnerDietary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:entries="@array/dietary"
        android:layout_marginEnd="@dimen/basic_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infoDietary"
        app:layout_constraintBottom_toBottomOf="@+id/infoDietary"/>
    <TextView
        android:id="@+id/infoPrefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preferred_ingredients"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoDietary"/>
    <Spinner
        android:id="@+id/spinnerPrefer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:entries="@array/preferred"
        android:layout_marginEnd="@dimen/basic_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infoPrefer"
        app:layout_constraintBottom_toBottomOf="@+id/infoPrefer"/>
    <TextView
        android:id="@+id/infoLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cooking_level"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoPrefer"/>
    <Spinner
        android:id="@+id/spinnerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:entries="@array/level"
        android:layout_marginEnd="@dimen/basic_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infoLevel"
        app:layout_constraintBottom_toBottomOf="@+id/infoLevel"/>
    <Button
        android:id="@+id/editBtn"
        android:layout_width="wrap_content"
        android:minWidth="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_choose"
        android:backgroundTint="@color/white"
        android:text="@string/edit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/default_color"
        android:paddingHorizontal="20dp"
        android:layout_margin="@dimen/basic_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/basicInfo"/>
</androidx.constraintlayout.widget.ConstraintLayout>